{
  "name": "claude-recall",
  "version": "0.12.0",
  "description": "Persistent memory for Claude Code with native Skills integration, automatic capture, failure learning, and project scoping via MCP server",
  "main": "dist/index.js",
  "bin": {
    "claude-recall": "dist/cli/claude-recall-cli.js"
  },
  "files": [
    "dist/",
    ".claude/",
    "scripts/postinstall.js",
    "scripts/uninstall.js",
    "README.md",
    "LICENSE",
    "docs/"
  ],
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js || true",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:mcp": "jest tests/mcp",
    "test:watch:unit": "jest --watch tests/unit",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest --coverage --maxWorkers=50% tests/unit",
    "test:coverage:integration": "jest --coverage --maxWorkers=50% tests/integration",
    "test:benchmarks": "jest tests/benchmarks",
    "test:experimental": "jest tests/experimental",
    "build": "tsc && mkdir -p dist/memory dist/config && cp src/memory/schema.sql dist/memory/ && (cp -r src/config/* dist/config/ 2>/dev/null || true) && chmod +x dist/cli/claude-recall-cli.js",
    "build:cli": "tsc && chmod +x dist/cli/claude-recall-cli.js",
    "dev": "ts-node",
    "start": "ts-node src/server.ts",
    "start:dev": "nodemon --exec ts-node src/server.ts",
    "claude-recall": "ts-node src/cli/claude-recall-cli.ts",
    "install:global": "npm run build && npm link",
    "stats": "npm run claude-recall stats",
    "search": "npm run claude-recall search",
    "preuninstall": "node scripts/uninstall.js",
    "prepare": "npm run build",
    "mcp:start": "node dist/cli/claude-recall-cli.js mcp start",
    "mcp:dev": "ts-node src/cli/claude-recall-cli.ts mcp start",
    "mcp:debug": "NODE_ENV=development DEBUG=claude-recall:* ts-node src/cli/claude-recall-cli.ts mcp start",
    "mcp:test": "echo '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"initialize\",\"params\":{}}' | npm run mcp:start",
    "mcp:health": "echo '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"health/check\",\"params\":{}}' | npm run mcp:start"
  },
  "keywords": [
    "claude-code",
    "mcp",
    "memory",
    "ai",
    "claude",
    "anthropic",
    "model-context-protocol"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "author": "Claude Recall Team",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raoulbia-ai/claude-recall.git"
  },
  "homepage": "https://github.com/raoulbia-ai/claude-recall#readme",
  "bugs": {
    "url": "https://github.com/raoulbia-ai/claude-recall/issues"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.5.0",
    "commander": "^12.1.0"
  }
}
